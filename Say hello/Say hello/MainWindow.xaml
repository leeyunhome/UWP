        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Say_hello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SayHelloButton" Content="Say hello" HorizontalAlignment="Left" Margin="207,207,0,0" VerticalAlignment="Top" Width="75" Click="SayHelloButton_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="80" Margin="207,79,0,0" TextWrapping="Wrap" Text="Hello there!" VerticalAlignment="Top" Width="360" FontSize="36" FontFamily="NanumBarunpen Bold" TextAlignment="Center" BorderThickness="1,1,8,8"/>

    </Grid>
</Window>
